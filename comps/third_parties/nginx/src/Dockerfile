FROM nginx:alpine

RUN apk add --no-cache gettext

COPY comps/third_parties/nginx/src/nginx.conf.template /etc/nginx/nginx.conf.template

ENV FRONTEND_SERVICE_IP=localhost
ENV FRONTEND_SERVICE_PORT=5173
ENV BACKEND_SERVICE_NAME=chatqna
ENV BACKEND_SERVICE_IP=localhost
ENV BACKEND_SERVICE_PORT=8888
ENV DATAPREP_SERVICE_IP=localhost
ENV DATAPREP_SERVICE_PORT=6007
ENV BACKEND_CODEGEN_SERVICE_NAME=codegen
ENV BACKEND_CODEGEN_SERVICE_IP=localhost
ENV BACKEND_CODEGEN_SERVICE_PORT=7778
ENV BACKEND_DOCSUM_SERVICE_NAME=docsum
ENV BACKEND_DOCSUM_SERVICE_IP=localhost
ENV BACKEND_DOCSUM_SERVICE_PORT=8888
ENV BACKEND_CHAT_HISTORY_SERVICE_NAME=chathistory
ENV BACKEND_CHAT_HISTORY_SERVICE_IP=localhost
ENV BACKEND_CHAT_HISTORY_SERVICE_PORT=6012
ENV BACKEND_PROMPT_SERVICE_NAME=prompt
ENV BACKEND_PROMPT_SERVICE_IP=localhost
ENV BACKEND_PROMPT_SERVICE_PORT=6018
ENV KEYCLOAK_SERVICE_NAME=keycloak
ENV KEYCLOAK_SERVICE_IP=localhost
ENV KEYCLOAK_SERVICE_PORT=8080

COPY comps/third_parties/nginx/deployment/docker_compose/start-nginx.sh /usr/local/bin/start-nginx.sh
RUN chmod +x /usr/local/bin/start-nginx.sh

CMD ["/usr/local/bin/start-nginx.sh"]
